{
  "name": "@knowark/routarkjs",
  "version": "0.5.1",
  "description": "Single Page Application Router",
  "main": "lib/index.js",
  "directories": {
    "lib": "lib",
    "test": "tests"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
