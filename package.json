  "bugs": {
    "url": "https://github.com/knowark/routarkjs/issues"
  },
  "homepage": "https://github.com/knowark/routarkjs#readme",
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "babel-jest": "^26.6.3",
    "jest": "^26.6.3"
  }
